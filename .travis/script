#!/bin/bash

ACME_DIR="$(pwd)"

# Fetch boulder.
travis_retry go get \
  bitbucket.org/liamstask/goose/cmd/goose \
  github.com/jsha/listenbuddy \
  github.com/letsencrypt/boulder/...

# Setup DB.
cd $GOPATH/src/github.com/letsencrypt/boulder
./test/create_db.sh || exit 2

# Start boulder.
patch -t -p1 < "$ACME_DIR/.travis/boulder.patch" || exit 3
./start.py &
START_PID=$$

# Wait for boulder to come up.
while ((1)); do
  kill -0 "$START_PID" || break
  [ -e /tmp/boulder-has-started ] && break

  echo Waiting for boulder to come up...
  sleep 1
done
echo Boulder up.
echo ----------------------------------------------------------------

# Run tests.
cd "$ACME_DIR"

go test -v ./...
RESULT=$?

# Stop boulder.
echo ----------------------------------------------------------------
echo Stopping boulder...
kill -INT "$START_PID"
wait
echo Done.
exit $RESULT
